<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/titlebar"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="系统帮助与支持"
            android:textColor="@color/white"
            android:textSize="20.0sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dip"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:gravity="center_vertical"
            android:text="设备使用"
            android:textSize="20dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nor_up_concor"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/share_tssv_p"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@drawable/nor_up_concor"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/bloodpressure_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dip"
                    android:gravity="center_vertical"
                    android:text="蓝牙血压计使用帮助"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/setting_click"
                    android:contentDescription="@string/app_name" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="@drawable/sc_line"
                android:contentDescription="@string/app_name" />

            <RelativeLayout
                android:id="@+id/clear_cache_p"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@drawable/nor_up_concor"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/bloodsugar_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dip"
                    android:gravity="center_vertical"
                    android:text="蓝牙血糖仪使用帮助"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/setting_click"
                    android:contentDescription="@string/app_name" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="@drawable/sc_line"
                android:contentDescription="@string/app_name" />

            <RelativeLayout
                android:id="@+id/soft_feedback_p"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@drawable/nor_up_concor"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/heartlisten_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dip"
                    android:gravity="center_vertical"
                    android:text="心脏听诊使用帮助"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/setting_click"
                    android:contentDescription="@string/app_name" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dip"
        android:layout_marginTop="15.0dip"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:gravity="center_vertical"
            android:text="健康信息推送设置"
            android:textSize="20dip" />

        <RelativeLayout
            android:id="@+id/quality_application_p"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:background="@drawable/nor_down_concor"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/quality_application"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:gravity="center_vertical"
                android:text="是否开启推送"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="40dip"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:text="开启" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@drawable/sc_line"
            android:contentDescription="@string/app_name" />

        <RelativeLayout
            android:id="@+id/quality_application_p"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:background="@drawable/nor_down_concor"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/dear_phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:gravity="center_vertical"
                android:hint="点此设置亲情号码"
                android:textSize="15dip" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dip"
        android:layout_marginTop="15.0dip"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:gravity="center_vertical"
            android:text="了解更多"
            android:textSize="20dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nor_up_concor"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/share_tssv_p"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@drawable/nor_up_concor"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/share_tssv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dip"
                    android:gravity="center_vertical"
                    android:text="在线升级"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/setting_click"
                    android:contentDescription="@string/app_name" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="@drawable/sc_line"
                android:contentDescription="@string/app_name" />

            <RelativeLayout
                android:id="@+id/clear_cache_p"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@drawable/nor_up_concor"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/clear_cache"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dip"
                    android:gravity="center_vertical"
                    android:text="意见反馈"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/setting_click"
                    android:contentDescription="@string/app_name" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="@drawable/sc_line"
                android:contentDescription="@string/app_name" />

            <RelativeLayout
                android:id="@+id/soft_feedback_p"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@drawable/nor_up_concor"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/soft_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dip"
                    android:gravity="center_vertical"
                    android:text="关于开发"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/setting_click"
                    android:contentDescription="@string/app_name" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dip"
        android:layout_marginTop="15.0dip"
        android:background="@drawable/register_btn_regist"
        android:text="退出登陆"
        android:textColor="#ff000000"
        android:textSize="23.0dip" />

</LinearLayout>