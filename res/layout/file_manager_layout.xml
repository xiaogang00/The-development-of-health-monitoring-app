<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </TabWidget>

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <!-- 定义第一个标签页的内容:基本信息 -->

            <LinearLayout
                android:id="@+id/tab01"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_marginTop="20.0dip"
                    android:background="@drawable/shape_bg"
                    android:orientation="vertical" >

                    <!-- 用户名 -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingLeft="15.0dip"
                            android:text="用户名:"
                            android:textColor="@android:color/black"
                            android:textSize="18.0sp" />

                        <EditText
                            android:id="@+id/file_username"
                            android:layout_width="1px"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="15.0dip"
                            android:layout_weight="2.61"
                            android:background="@android:color/white"
                            android:focusable="false"
                            android:maxLength="16"
                            android:paddingLeft="10.0dip"
                            android:selectAllOnFocus="true"
                            android:textColor="#ff545454"
                            android:textSize="18.0sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="@drawable/shape_line" />

                    <!-- 密码 -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingLeft="15.0dip"
                            android:text="密    码:"
                            android:textColor="@android:color/black"
                            android:textSize="18.0sp" />

                        <EditText
                            android:id="@+id/file_password"
                            android:layout_width="1px"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="15.0dip"
                            android:layout_weight="3"
                            android:background="@android:color/white"
                            android:focusable="false"
                            android:inputType="textPassword"
                            android:maxLength="16"
                            android:paddingLeft="10.0dip"
                            android:selectAllOnFocus="true"
                            android:textColor="#ff545454"
                            android:textSize="16.0sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="@drawable/shape_line" />

                    <!-- 姓名 -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingLeft="15.0dip"
                            android:text="姓    名:"
                            android:textColor="@android:color/black"
                            android:textSize="18.0sp" />

                        <EditText
                            android:id="@+id/file_name"
                            android:layout_width="1px"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="15.0dip"
                            android:layout_weight="2.16"
                            android:background="@android:color/white"
                            android:focusable="false"
                            android:maxLength="20"
                            android:paddingLeft="10.0dip"
                            android:selectAllOnFocus="true"
                            android:textColor="#ff545454"
                            android:textSize="16.0sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="@drawable/shape_line" />

                    <!-- 性别 -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingLeft="15.0dip"
                            android:text="性    别:"
                            android:textColor="@android:color/black"
                            android:textSize="18.0sp" />

                        <RadioGroup
                            android:id="@+id/file_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="15.0dip"
                            android:background="@android:color/white"
                            android:orientation="horizontal" >

                            <RadioButton
                                android:id="@+id/file_male"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="男"
                                android:textColor="@android:color/black"
                                android:textSize="18.0sp" />

                            <RadioButton
                                android:id="@+id/file_female"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40.0dip"
                                android:checked="false"
                                android:text="女"
                                android:textColor="@android:color/black"
                                android:textSize="18.0sp" />
                        </RadioGroup>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="@drawable/shape_line" />

                    <!-- 年龄 -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingLeft="15.0dip"
                            android:text="年    龄:"
                            android:textColor="@android:color/black"
                            android:textSize="18.0sp" />

                        <EditText
                            android:id="@+id/file_age"
                            android:layout_width="1px"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="15.0dip"
                            android:layout_weight="2.16"
                            android:background="@android:color/white"
                            android:focusable="false"
                            android:maxLength="2"
                            android:paddingLeft="10.0dip"
                            android:phoneNumber="true"
                            android:selectAllOnFocus="true"
                            android:textColor="#ff545454"
                            android:textSize="16.0sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="@drawable/shape_line" />

                    <!-- 手机号 -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingLeft="15.0dip"
                            android:text="手机号:"
                            android:textColor="@android:color/black"
                            android:textSize="18.0sp" />

                        <EditText
                            android:id="@+id/file_phone"
                            android:layout_width="1px"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="15.0dip"
                            android:layout_weight="3"
                            android:background="@android:color/white"
                            android:focusable="false"
                            android:inputType="number"
                            android:maxLength="15"
                            android:paddingLeft="10.0dip"
                            android:selectAllOnFocus="true"
                            android:textColor="#ff545454"
                            android:textSize="16.0sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="@drawable/shape_line" />
                </LinearLayout>
            </LinearLayout>

            <!-- 定义第二个标签页的内容：健康数据 -->

            <LinearLayout
                android:id="@+id/tab02"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_marginTop="20.0dip"
                    android:background="@drawable/shape_bg"
                    android:orientation="vertical" >

                    <!-- 身高 -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingLeft="15.0dip"
                            android:text="身   高:"
                            android:textColor="@android:color/black"
                            android:textSize="18.0sp" />

                        <EditText
                            android:id="@+id/reg_account"
                            android:layout_width="1px"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="15.0dip"
                            android:layout_weight="2.61"
                            android:background="@android:color/white"
                            android:hint="请输入身高"
                            android:inputType="number"
                            android:maxLength="5"
                            android:paddingLeft="10.0dip"
                            android:selectAllOnFocus="true"
                            android:textColor="#ff545454"
                            android:textSize="16.0sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="@drawable/shape_line" />

                    <!-- 体重 -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingLeft="15.0dip"
                            android:text="体   重:"
                            android:textColor="@android:color/black"
                            android:textSize="18.0sp" />

                        <EditText
                            android:id="@+id/reg_password"
                            android:layout_width="1px"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="15.0dip"
                            android:layout_weight="3"
                            android:background="@android:color/white"
                            android:hint="请输入体重"
                            android:inputType="number"
                            android:maxLength="5"
                            android:paddingLeft="10.0dip"
                            android:selectAllOnFocus="true"
                            android:textColor="#ff545454"
                            android:textSize="16.0sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="@drawable/shape_line" />

                    <!-- 有无传染病史 -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingLeft="15.0dip"
                            android:text="有无传染病史:"
                            android:textColor="@android:color/black"
                            android:textSize="18.0sp" />

                        <RadioGroup
                            android:id="@+id/reg_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="15.0dip"
                            android:background="@android:color/white"
                            android:orientation="horizontal" >

                            <RadioButton
                                android:id="@+id/reg_man"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="无"
                                android:textColor="@android:color/black"
                                android:textSize="18.0sp" />

                            <RadioButton
                                android:id="@+id/reg_woman"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="32.0dip"
                                android:checked="false"
                                android:text="有"
                                android:textColor="@android:color/black"
                                android:textSize="18.0sp" />
                        </RadioGroup>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="@drawable/shape_line" />

                    <!-- 有无家族病史 -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingLeft="15.0dip"
                            android:text="有无家族病史:"
                            android:textColor="@android:color/black"
                            android:textSize="18.0sp" />

                        <RadioGroup
                            android:id="@+id/reg_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="15.0dip"
                            android:background="@android:color/white"
                            android:orientation="horizontal" >

                            <RadioButton
                                android:id="@+id/reg_man"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="无"
                                android:textColor="@android:color/black"
                                android:textSize="18.0sp" />

                            <RadioButton
                                android:id="@+id/reg_woman"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="32.0dip"
                                android:checked="false"
                                android:text="有"
                                android:textColor="@android:color/black"
                                android:textSize="18.0sp" />
                        </RadioGroup>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="@drawable/shape_line" />

                    <!-- 患其它病史 -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingLeft="15.0dip"
                            android:text="患其它病史:"
                            android:textColor="@android:color/black"
                            android:textSize="18.0sp" />

                        <EditText
                            android:id="@+id/reg_age"
                            android:layout_width="1px"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="15.0dip"
                            android:layout_weight="2.16"
                            android:background="@android:color/white"
                            android:hint="请描述"
                            android:maxLength="2"
                            android:paddingLeft="10.0dip"
                            android:selectAllOnFocus="true"
                            android:textColor="#ff545454"
                            android:textSize="16.0sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="@drawable/shape_line" />
                </LinearLayout>

                <Button
                    android:id="@+id/file_savedButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginRight="20.0dip"
                    android:layout_marginTop="10.0dip"
                    android:background="@drawable/register_btn_regist"
                    android:text="保存上传"
                    android:textColor="#ff000000"
                    android:textSize="18.0sp" />
            </LinearLayout>

            <!-- 定义第三个标签页的内容：电子病历 -->

            <LinearLayout
                android:id="@+id/tab03"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="历史病历照片"
                        android:textSize="20dp" />

                    <ImageSwitcher
                        android:id="@+id/imageSwitcher"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_below="@id/txt"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp" />

                    <Gallery
                        android:id="@+id/gallery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageSwitcher"
                        android:layout_marginTop="15dp"
                        android:spacing="3pt"
                        android:unselectedAlpha="0.6" />

                    <Button
                        android:id="@+id/addImageButton"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/gallery"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="病例拍照" />
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</TabHost>